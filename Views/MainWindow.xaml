<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="BouncyCat.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BouncyCat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:obj="using:BouncyCat.Objects"
    xmlns:ic="using:FluentIcons.WinUI"
    Title="BouncyCat">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid x:Name="GridTitleBar" ColumnSpacing="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="BouncyCat" x:Name="de"  VerticalAlignment="Center" FontSize="15"  FontWeight="SemiBold" Margin="15,0,0,0"></TextBlock>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" Visibility="{Binding Path=ViewModel.IsLoading,Converter={StaticResource BoolToVisibilityConverter}}">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading}"  Width="18" Height="18"></ProgressRing>
                <TextBlock Text="更新数据中···" FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </Grid>
        <NavigationView  Grid.Row="1" PaneDisplayMode="Left" IsPaneToggleButtonVisible="False"  OpenPaneLength="74" IsBackButtonVisible="Collapsed" IsSettingsVisible="False"  x:Name="Navi"  CompactPaneLength="0" MenuItemsSource="{x:Bind ViewModel.MenuItems}" FooterMenuItemsSource="{x:Bind ViewModel.FooterItems}" ItemInvoked="Navi_ItemInvoked">
            <NavigationView.MenuItemTemplate>
                <DataTemplate x:DataType="obj:NavigationItem">
                    <NavigationViewItem Width="76" HorizontalContentAlignment="Right" Tag="{Binding Tag,Mode=OneWay}" >
                        <StackPanel Orientation="Vertical"  Width="39" Height="67" >
                            <ic:SymbolIcon Symbol="{Binding IconSymbol}" FontSize="20" Margin="5" HorizontalAlignment="Center"  Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" IconVariant="{Binding IsSelected,Converter={StaticResource VariantConverter},Mode=OneWay}"></ic:SymbolIcon>
                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Margin="5" FontSize="12"></TextBlock>
                        </StackPanel>
                    </NavigationViewItem>
                </DataTemplate>
            </NavigationView.MenuItemTemplate>
            <NavigationView.FooterMenuItems>
                <DataTemplate x:DataType="obj:NavigationItem">
                    <NavigationViewItem Width="76" HorizontalContentAlignment="Right" Tag="{Binding Tag,Mode=OneWay}" >
                        <StackPanel Orientation="Vertical"  Width="39" Height="67" >
                            <ic:SymbolIcon Symbol="{Binding IconSymbol}" FontSize="20" Margin="5" HorizontalAlignment="Center"  Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" IconVariant="{Binding IsSelected,Converter={StaticResource VariantConverter},Mode=OneWay}"></ic:SymbolIcon>
                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Margin="5" FontSize="12"></TextBlock>
                        </StackPanel>
                    </NavigationViewItem>
                </DataTemplate>
            </NavigationView.FooterMenuItems>
            <Frame x:Name="RootFrame"></Frame>
        </NavigationView>
    </Grid>
</Window>
